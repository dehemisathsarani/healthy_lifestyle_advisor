"""
Environment configuration file for fitness backend
Copy this to .env and update with your actual values
"""

# Database Configuration Options
# Option 1: MongoDB Atlas (Cloud - Recommended)
# MONGODB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority

# Option 2: Local MongoDB (if installed)
# MONGODB_URL=mongodb://localhost:27017

# Option 3: Use file-based database for testing (no MongoDB required)
# USE_FILE_DATABASE=true

# Database Settings
DB_NAME=fitness_db
DEMO_MODE=false

# JWT Settings
JWT_SECRET_KEY=your_super_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_PREFIX=/api/v1

# Wearable Device Integration
WEARABLE_API_ENABLED=true
FITBIT_CLIENT_ID=
FITBIT_CLIENT_SECRET=
GARMIN_CONSUMER_KEY=
GARMIN_CONSUMER_SECRET=
APPLE_HEALTH_INTEGRATION=false
GOOGLE_FIT_CLIENT_ID=
WEARABLE_SYNC_INTERVAL=15

# Health Monitoring
ANOMALY_DETECTION_ENABLED=true
ANOMALY_SENSITIVITY=medium
HEART_RATE_ALERT_THRESHOLD=120
RECOVERY_ADVICE_AUTO_REFRESH=true

# CORS Settings
CORS_ORIGINS=*